@inherits WorldExplorerAuthBaseComponent
@page "/admin"

<MudButton OnClick="ClearPlaces">Clear places</MudButton>

<MudTable Items="@places" Breakpoint="Breakpoint.Sm" T="global::Shared.Models.Place">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Location</MudTh>
        <MudTh>Rating</MudTh>
        <MudTh>Images count</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Sign">@context.Location</MudTd>
        <MudTd DataLabel="Name">@context.Rating</MudTd>
        <MudTd DataLabel="Position">@context.Images.Count</MudTd>
    </RowTemplate>
</MudTable>