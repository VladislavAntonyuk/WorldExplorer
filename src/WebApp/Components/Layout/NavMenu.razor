@using System.Reflection
@inherits WorldExplorerBaseComponent

<MudNavMenu>
	<AuthorizeView>
		<Authorized>
			<MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Dashboard">@Translation.MenuPlaces</MudNavLink>
		</Authorized>
	</AuthorizeView>
	<MudNavLink Href="about" Icon="@Icons.Material.Outlined.Info">@Translation.MenuAbout</MudNavLink>
	<MudNavLink Href="privacy" Icon="@Icons.Material.Outlined.PrivacyTip">@Translation.MenuPrivacy</MudNavLink>
	<AuthorizeView Policy="IsAdministrator">
    		<Authorized>
    			<MudNavLink Href="/admin" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Dashboard">Admin</MudNavLink>
    		</Authorized>
    	</AuthorizeView>
</MudNavMenu>
<div class="author">
	<div>
		<MudLink Href="https://vladislavantonyuk.azurewebsites.net/" Target="_blank">Vladislav Antonyuk</MudLink>
	</div>
	<div>@frameworkName</div>
	<div>
		© @DateTime.UtcNow.Year
	</div>
	<div>@Translation.Version: @Assembly.GetEntryAssembly()?.GetName().Version</div>
</div>